{

	"name": "Enso",
	"version": "0.1",
	"manifest_version": 2,
	"description": "5 minute meditation",
	"permissions": ["declarativeContent","storage", "activeTab", "tabs", "notifications", "*://www.facebook.com/*"],
	//permission for all sites: "*://*/*"

	"chrome_url_overrides": {                
		"newtab": "meditation_flow/home.html"
	},

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"content_scripts": [
	{
      "matches": [
        "https://*.nytimes.com/*"
      ],
      "js": [ "jquery-3.4.1.js",
        "modal_script.js" 
      ],
      "css": ["modal.css"],
      "run_at": "document_start"
    },

    {
      "matches": [
        "https://*.reddit.com/*"
      ],
      "js": [ "jquery-3.4.1.js",
        "modal_script.js" 
      ],
      "css": ["modal.css"],
      "run_at": "document_start"
    },

    {
      "matches": [
        "https://*.facebook.com/*"

      ],
      "js": [ "jquery-3.4.1.js",
        "modal_script.js" 
      ],
      "css": ["modal.css"],
      "run_at": "document_start"
    }

	],

	"web_accessible_resources": ["jquery-3.4.1.js","modal.html"],


	"page_action": {					
		"default_icon": {					 
			"16": "images/ensoicon16.png",  	
			"48": "images/ensoicon48.png",
			"128": "images/ensoicon128.png"
      },
      	"default_popup": "settings.html"
    },

  //   "browser_action": {					
		// "default_icon": {					 
		// 	"16": "images/ensoicon16.png",  	
		// 	"48": "images/ensoicon48.png",
		// 	"128": "images/ensoicon128.png"
  //     },
  //     	"default_popup": "settings.html"
  //   },

	"icons": {								
      "16": "images/ensoicon16.png",  				
      "48": "images/ensoicon48.png",
      "128": "images/ensoicon128.png"
    }

	


}


//injecting html to a site:https://stackoverflow.com/questions/15873904/adding-complex-html-using-a-chrome-content-script 
//places to include jquery file: https://stackoverflow.com/questions/22595339/using-jquery-in-a-content-script